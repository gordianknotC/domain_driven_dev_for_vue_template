{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    /** strict mode ...*/
    // "noImplicitUseStrict": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true, /* Generates corresponding '.d.ts' file. */
    "diagnostics": true,
    "emitDecoratorMetadata": true, /* Enables experimental support for emitting type metadata for decorators. */
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "preserve",
    "jsxFactory": "h", /* Specify the JSX factory function to use when targeting react JSX emit, e.g. React.createElement or h. */
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true, /* Raise error on expressions and declarations with an implied 'any' type. */
    "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
    "noImplicitThis": true, /* Raise error on 'this' expressions with an implied 'any' type. */
    "outDir": "./dist/out-tsc", /* Redirect output structure to the directory. */
    "paths": {
      "@/*": [
        "src/*"
      ],
      /*
      *     A L I A S   P A T H
      *     需要同時設置 vue.config.js - alias
      **/
      "~/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": true, /**/
    "strictFunctionTypes": true,
    "strictNullChecks": true, /* Enable strict null checks. */
    "strictPropertyInitialization": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "webpack-env",
      "jquery",

      "node", 
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "storybook-static",
    ".vite-storybook",
  ],
  "include": [
    "src",
    "@types",
    "src/index.ts",
    "vite.config.ts",
    "src/**/*.svg",
    "src/**/*.png",
    "src/**/*.jpg",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    ".storybook/stories",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "__tests__/*.tsx",
    "__tests__/*.ts",
  ],
  "vueCompilerOptions": {
    "plugins": [
      "@volar/vue-language-plugin-pug"
    ]
  },
  // support jest-expect message, see: https://github.com/mattphillips/jest-expect-message
  "files": ["node_modules/jest-expect-message/types/index.d.ts"],
}